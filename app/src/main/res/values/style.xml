<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="collapsedTitleGravity">center</item>

    </style>

    <style name="FabStyle">
        <item name="android:gravity">center</item>
        <item name="fabSize">normal</item>
        <item name="useCompatPadding">true</item>
    </style>


    <style name="FabStyle.Orange">
        <item name="backgroundTint">@color/camera_selector</item>
    </style>

    <!--tool bar style-->

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="MyToolBarStyle" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

</resources>